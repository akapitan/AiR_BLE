<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="First name:     "
            android:textColor="#e25a10"
            android:textStyle="bold"
            android:id="@+id/textView" android:layout_alignParentTop="true" android:layout_alignParentStart="true"
            android:layout_marginTop="30dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/txtFirstName"
            android:layout_toEndOf="@+id/textView" android:layout_alignTop="@+id/textView"
            android:layout_alignStart="@+id/txtLastName"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:textAppearance="?android:attr/textAppearanceMedium" android:text="Last name:     "
              android:id="@+id/textView4"
              android:layout_marginTop="30dp" android:layout_below="@+id/textView"
              android:layout_alignParentStart="true"
              android:textColor="#e25a10"
              android:textStyle="bold"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:textAppearance="?android:attr/textAppearanceMedium" android:text="Medium Text"
              android:id="@+id/txtLastName"
              android:layout_toEndOf="@+id/textView4"
              android:layout_above="@+id/textView6" android:layout_alignStart="@+id/txtEmail"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Email:     "
            android:id="@+id/textView6" android:layout_below="@+id/textView4" android:layout_alignParentStart="true"
            android:layout_marginTop="30dp"
            android:textColor="#e25a10"
            android:textStyle="bold"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/txtEmail"
            android:layout_toEndOf="@+id/textView" android:layout_alignTop="@+id/textView6"
            android:layout_alignStart="@+id/txtPoints"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Points:     "
            android:id="@+id/textView8" android:layout_below="@+id/textView6" android:layout_alignParentStart="true"
            android:layout_marginTop="30dp"
            android:textColor="#e25a10"
            android:textStyle="bold"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium text"
            android:id="@+id/txtPoints"
            android:layout_toEndOf="@+id/textView10" android:layout_alignTop="@+id/textView8"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Last checkin:     "
            android:id="@+id/textView10"
            android:layout_marginTop="30dp" android:layout_below="@+id/textView8"
            android:layout_alignParentStart="true"
            android:textColor="#e25a10"
            android:textStyle="bold"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/txtLastCheckin" android:layout_alignBottom="@+id/textView10"
            android:layout_toEndOf="@+id/textView10"/>
</RelativeLayout>
